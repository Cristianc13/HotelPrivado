@model IEnumerable<HotelPrivado.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<a href="/Panel/Panel">Regresar al Panel</a>
<p></p>

<h1>Cliente</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lugarNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lugarNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.observacion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idCliente">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idCliente">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.idCliente">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
